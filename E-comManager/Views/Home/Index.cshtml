@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #e0f7fa, #80deea); /* Gradient background */
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .text-center {
            text-align: center;
            background: #ffffff;
            padding: 40px 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .text-center h1 {
                margin: 0;
                font-size: 2.5em;
                color: #333;
            }

            .text-center p {
                font-size: 1.2em;
                color: #666;
                margin: 20px 0;
            }

        .primary-btn {
            padding: 10px 20px;
            font-size: 1em;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .primary-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1>Welcome to E-com Manager</h1>
            <p>Manage your online store effortlessly with our comprehensive tools and insights.</p>
        </div>
    </div>
</body>
</html>